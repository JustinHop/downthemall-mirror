<!DOCTYPE overlay SYSTEM "chrome://dta/locale/menu.dtd">
<overlay id="DtaBrowserToolbar" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

	<script type="application/x-javascript" src="chrome://dta/content/common/overlayFunctions.js"/>
	<script type="application/x-javascript" src="chrome://dta/content/integration/menu.js"/>
	<script type="application/x-javascript" src="chrome://global/content/nsDragAndDrop.js"/>
	<script type="application/x-javascript" src="chrome://global/content/nsTransferable.js"/> 
	<script type="application/x-javascript" src="chrome://help/content/contextHelp.js"/>

	<toolbarpalette id="BrowserToolbarPalette"> 
		<toolbarbutton 
			id="dta-turbo-button" class="chromeclass-toolbar-additional toolbarbutton-1"
			ondragover="nsDragAndDrop.dragOver(event, DTA_DropTDTA);"
			ondragdrop="nsDragAndDrop.drop(event, DTA_DropTDTA);"
			oncommand="DTA_ContextOverlay.findLinks(true);"
			label="dTaOneClick!"
			tooltiptext="dTaOneClick!"
		/>
		<toolbarbutton
			id="dta-button"
			class="chromeclass-toolbar-additional toolbarbutton-1" 
			ondragover="nsDragAndDrop.dragOver(event, DTA_DropDTA);"
			ondragdrop="nsDragAndDrop.drop(event, DTA_DropDTA);"
			oncommand="if (event.target == this) DTA_ContextOverlay.findLinks(false);"
			label="DownThemAll!"
			tooltiptext="DownThemAll!"
			type="menu-button"
		>
			<menupopup>
				<menuitem id="dta-tb-dta" label="DownThemAll!" onclick="DTA_ContextOverlay.findLinks();" image="chrome://dta/skin/common/dta.png" class="menuitem-iconic"/>
				<menuitem id="dta-tb-turbo" label="dtaOneClick!" onclick="DTA_ContextOverlay.findLinks(true);" image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic"/>
				<menuseparator/>
				<menuitem id="dta-tb-all" label="DownThemAll! (&dta-tb-all.label;)" onclick="DTA_ContextOverlay.findLinks(false, true);" image="chrome://dta/skin/common/dta.png" class="menuitem-iconic"/>
				<menuitem id="dta-tb-allturbo" label="dtaOneClick! (&dta-tb-all.label;)" onclick="DTA_ContextOverlay.findLinks(true, true);" image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic"/>
				<menuseparator/>
				<menuitem id="dta-tb-manager" label="&dta-manager-button;" onclick="DTA_AddingFunctions.openManager();" image="chrome://dta/skin/common/box.png" class="menuitem-iconic"/>
			</menupopup>
		</toolbarbutton>
		<toolbarbutton
			id="dta-manager-button"
			class="chromeclass-toolbar-additional toolbarbutton-1"
			oncommand="DTA_AddingFunctions.openManager();"
			label="&dta-manager-button;"
			tooltiptext="DownThemAll! Manager"
		/>
	</toolbarpalette>
	<menupopup id="menu_ToolsPopup">	
			<menuitem id="dta-tool" oncommand="DTA_ContextOverlay.findLinks();" 
				label="DownThemAll!..." image="chrome://dta/skin/common/dta.png" class="menuitem-iconic" />
			<menuitem id="turbo-tool" oncommand="DTA_ContextOverlay.findLinks(true);" 
				label="dTaOneClick!" image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic" />
			
			<menuitem id="dta-manager-tool" oncommand="DTA_AddingFunctions.openManager();" 
				label="&dta-manager-button;..." image="chrome://dta/skin/common/box.png" class="menuitem-iconic" />	
			<menu id="dta-menu" label="DownThemAll" class="menu-iconic" image="chrome://dta/skin/common/dta.png" insertbefore="flashgot-menu" insertafter="sanitizeItem">
				<menupopup id="dta-Popup">
				<menuitem id="dta-tool-popup" oncommand="DTA_ContextOverlay.findLinks(false)" 
					label="DownThemAll!..." image="chrome://dta/skin/common/dta.png" class="menuitem-iconic" />
				<menuitem id="turbo-tool-popup" oncommand="DTA_ContextOverlay.findLinks(true)" 
					label="dTaOneClick!" image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic" />
				<menuitem id="dta-manager-tool-popup" oncommand="DTA_AddingFunctions.openManager()" 
					label="&dta-manager-button;..." image="chrome://dta/skin/common/box.png" class="menuitem-iconic" />	
				<menuseparator />

				<menuitem id="dta-pref-tool" oncommand="DTA_showPreferences();"
					label="&dta-pref.label;" image="chrome://dta/skin/common/prefs.png" class="menuitem-iconic" />
				<menuitem id="dta-help-tool" oncommand="openHelp('introduction','chrome://dta-help/content/help.rdf');"
					label="&dta-help.label;" image="chrome://dta/skin/common/help.png" class="menuitem-iconic" />	
				<menuitem id="dta-about" oncommand="window.openDialog('chrome://dta/content/about/about.xul','_blank','chrome,centerscreen,modal');"
					label="&dta-about.label;" image="chrome://dta/skin/common/about.png" class="menuitem-iconic" />
			</menupopup>
		</menu>
	</menupopup>
</overlay>