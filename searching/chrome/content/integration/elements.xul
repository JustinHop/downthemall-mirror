<!DOCTYPE overlay SYSTEM "chrome://dta/locale/menu.dtd">
<overlay id="DTAUIElements" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

	<script type="application/x-javascript" src="chrome://dta/content/common/overlayFunctions.js"/>
	<script type="application/x-javascript" src="chrome://dta/content/integration/elements.js"/>
	<script type="application/x-javascript" src="chrome://global/content/nsDragAndDrop.js"/>
	<script type="application/x-javascript" src="chrome://global/content/nsTransferable.js"/> 
	<script type="application/x-javascript" src="chrome://help/content/contextHelp.js"/>

	<menu image="chrome://dta/skin/common/dta.png" id="dtaCtxCompact" label="DownThemAll!" class="menu-iconic">
		<menupopup id="dtaCtxSubmenu">
			<menuseparator class="thin" id="dtaCtxSepFront"/>
			<menuitem image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic" id="dtaCtxTDTA" accesskey="o" oncommand="DTA_ContextOverlay.findLinks(true);"/>
			<menuitem image="chrome://dta/skin/common/dta.png" class="menuitem-iconic" id="dtaCtxDTA" accesskey="n" oncommand="DTA_ContextOverlay.findLinks(false);"/>
			<menuitem image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic" id="dtaCtxSaveT" accesskey="o" oncommand="DTA_ContextOverlay.findSingleLink(true);"/>
			<menuitem image="chrome://dta/skin/common/dta.png" class="menuitem-iconic" id="dtaCtxSave" accesskey="n" oncommand="DTA_ContextOverlay.findSingleLink(false);"/>
			<menuseparator class="thin" id="dtaCtxSepPref"/>
			<menuitem image="chrome://dta/skin/common/prefs.png" class="menuitem-iconic" id="dtaCtxPref" label="&dta-pref.label;" oncommand="DTA_showPreferences();" />
			<menuseparator class="thin" id="dtaCtxSepBack"/>
		</menupopup>
	</menu>

	<toolbarbutton
		id="dta-button"
		class="chromeclass-toolbar-additional toolbarbutton-1" 
		ondragover="nsDragAndDrop.dragOver(event, DTA_DropDTA);"
		ondragdrop="nsDragAndDrop.drop(event, DTA_DropDTA);"
		oncommand="if (event.target == this) DTA_ContextOverlay.findLinks(false);"
		label="dTa!"
		tooltiptext="DownThemAll!"
		type="menu-button"
	>
		<menupopup>
			<menuitem id="dta-tb-dta" label="DownThemAll! (&dta-tb-single.label;)" oncommand="DTA_ContextOverlay.findLinks();"  image="chrome://dta/skin/common/dta.png" class="menuitem-iconic" tooltiptext="DownThemAll!"/>
			<menuitem id="dta-tb-all" label="DownThemAll! (&dta-tb-all.label;)" oncommand="DTA_ContextOverlay.findLinks(false, true);" image="chrome://dta/skin/common/dta.png" class="menuitem-iconic" tooltiptext="DownThemAll!"/>
			<menuseparator/>
			<menuitem id="dta-tb-manager" label="&dta-manager-button;" oncommand="DTA_AddingFunctions.openManager();" image="chrome://dta/skin/common/box.png" class="menuitem-iconic" tooltiptext="&dta-manager-button;"/>
		</menupopup>
	</toolbarbutton>
	<toolbarbutton 
		id="dta-turbo-button" class="chromeclass-toolbar-additional toolbarbutton-1"
		ondragover="nsDragAndDrop.dragOver(event, DTA_DropTDTA);"
		ondragdrop="nsDragAndDrop.drop(event, DTA_DropTDTA);"
		oncommand="if (event.target == this) DTA_ContextOverlay.findLinks(true);"
		label="DTA OneClick!"
		tooltiptext="dTa OneClick!"
		type="menu-button"
	>
		<menupopup>
			<menuitem id="dta-tb-turbo" label="DTA OneClick! (&dta-tb-single.label;)" oncommand="DTA_ContextOverlay.findLinks(true, false);" tooltiptext="dTa OneClick!" image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic"/>
			<menuitem id="dta-tb-allturbo" label="DTA OneClick! (&dta-tb-all.label;)" oncommand="DTA_ContextOverlay.findLinks(true, true);" tooltiptext="dTa OneClick!" image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic"/>
		</menupopup>		
	</toolbarbutton>
	<toolbarbutton
		id="dta-manager-button"
		class="chromeclass-toolbar-additional toolbarbutton-1"
		oncommand="DTA_AddingFunctions.openManager();"
		label="&dta-manager-button;"
		tooltiptext="Manager"
	/>
	<menu id="dtaToolsMenu" label="DownThemAll" class="menu-iconic" image="chrome://dta/skin/common/dta.png">
		<menupopup id="dtaToolsPopup">
			<menuitem id="dtaToolsDTA" oncommand="DTA_ContextOverlay.findLinks(false)" 
				label="DownThemAll!..." image="chrome://dta/skin/common/dta.png" class="menuitem-iconic" />
			<menuitem id="dtaToolsTDTA" oncommand="DTA_ContextOverlay.findLinks(true)" 
				label="DTA OneClick!" image="chrome://dta/skin/common/turbo.png" class="menuitem-iconic" />
			<menuitem id="dtaToolsManager" oncommand="DTA_AddingFunctions.openManager()" 
				label="&dta-manager-button;..." image="chrome://dta/skin/common/box.png" class="menuitem-iconic" />	
			<menuseparator id="dtaToolsSep"/>
			<menuitem id="dtaToolsPrefs" oncommand="DTA_showPreferences();"
				label="&dta-pref.label;" image="chrome://dta/skin/common/prefs.png" class="menuitem-iconic" />
			<menuitem id="dtaToolsHelp" oncommand="openHelp('introduction','chrome://dta-help/content/help.rdf');"
				label="&dta-help.label;" image="chrome://dta/skin/common/help.png" class="menuitem-iconic" />	
			<menuitem id="dtaToolsAbout" oncommand="window.openDialog('chrome://dta/content/about/about.xul','_blank','chrome,centerscreen,modal');"
				label="&dta-about.label;" image="chrome://dta/skin/common/about.png" class="menuitem-iconic" />
		</menupopup>
	</menu>
</overlay>