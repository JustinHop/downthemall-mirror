<!DOCTYPE overlay SYSTEM "chrome://dta/locale/menu.dtd">
<overlay id="DtaBrowserToolbar" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

<script type="application/x-javascript" src="chrome://dta/content/dta/overlayFunctions.js"/>
<script type="application/x-javascript" src="chrome://dta/content/menu.js"/>
<script type="application/x-javascript" src="chrome://global/content/nsUserSettings.js" />
<script src="chrome://global/content/nsDragAndDrop.js"/>
<script src="chrome://global/content/nsTransferable.js"/> 
<toolbarpalette id="MailToolbarPalette"> 
	<toolbarbutton id="turbo-button" class="chromeclass-toolbar-additional toolbarbutton-1" ondragover="nsDragAndDrop.dragOver(event, dragObserverTdTa);" ondragdrop="nsDragAndDrop.drop(event, dragObserverTdTa);" oncommand="DTA_ContextOverlay.findLinks(true);" label="dTaOneClick!" tooltiptext="dTaOneClick!" />
	<toolbarbutton id="dta-button" class="chromeclass-toolbar-additional toolbarbutton-1" ondragover="nsDragAndDrop.dragOver(event, dragObserverdTa);" ondragdrop="nsDragAndDrop.drop(event, dragObserverdTa);" oncommand="DTA_ContextOverlay.findLinks(false);" label="DownThemAll!" tooltiptext="DownThemAll!" />
	<toolbarbutton id="dta-manager-button" class="chromeclass-toolbar-additional toolbarbutton-1" oncommand="DTA_AddingFunctions.openManager();" label="&dta-manager-button;" tooltiptext="DownThemAll! Manager" />
</toolbarpalette>
<menupopup id="taskPopup">	
		<menuitem id="dta-tool" oncommand="DTA_ContextOverlay.findLinks(false);" 
			label="DownThemAll!..." image="chrome://dta/content/immagini/dtasmall.png" class="menuitem-iconic" />
		<menuitem id="turbo-tool" oncommand="DTA_ContextOverlay.findLinks(true);" 
			label="dTaOneClick!" image="chrome://dta/content/immagini/tdtasmall.png" class="menuitem-iconic" />
		
		<menuitem id="dta-manager-tool" oncommand="DTA_AddingFunctions.openManager();" 
			label="&dta-manager-button;..." image="chrome://dta/content/immagini/boxpiccolo.png" class="menuitem-iconic" />	
	<menu id="dta-menu" label="DownThemAll" class="menu-iconic" image="chrome://dta/content/immagini/dtasmall.png" insertbefore="flashgot-menu" insertafter="sanitizeItem">
		<menupopup id="dta-Popup">
		<menuitem id="dta-tool-popup" oncommand="DTA_ContextOverlay.findLinks(false)" 
			label="DownThemAll!..." image="chrome://dta/content/immagini/dtasmall.png" class="menuitem-iconic" />
		<menuitem id="turbo-tool-popup" oncommand="DTA_ContextOverlay.findLinks(true)" 
			label="dTaOneClick!" image="chrome://dta/content/immagini/tdtasmall.png" class="menuitem-iconic" />
		<menuitem id="dta-manager-tool-popup" oncommand="DTA_AddingFunctions.openManager()" 
			label="&dta-manager-button;..." image="chrome://dta/content/immagini/boxpiccolo.png" class="menuitem-iconic" />	
		<menuseparator />

		<menuitem id="dta-pref-tool" oncommand="window.openDialog('chrome://dta/content/opzioni/newPref.xul','_blank','chrome,titlebar,toolbar,centerscreen,resizable,dialog=no');"
			label="&submenu-dta-pref.label;" image="chrome://dta/content/immagini/opzioni.png" class="menuitem-iconic" />
		<menuitem id="dta-help-tool" oncommand="openHelp('introduction','chrome://dta/content/dtahelp.rdf');"
			label="&dta-help-tool.label;" image="chrome://dta/content/immagini/help.png" class="menuitem-iconic" />	
		<menuitem id="dta-about" oncommand="window.openDialog('chrome://dta/content/about/about.xul','_blank','chrome,centerscreen,resizable=no, dialog=no');"
			label="&about;" image="chrome://dta/content/immagini/about.png" class="menuitem-iconic" />
	</menupopup>
	</menu>
</menupopup>
</overlay>